<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:useDefaultMargins="false"
        android:alignmentMode="alignBounds"
        android:horizontalSpacing="50dp"
        android:verticalSpacing="50dp"
        android:columnCount="2"
        android:rowCount="4">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_columnSpan="2"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="483dp" />

        <Button
            android:id="@+id/buttonLaunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lancer l'app"
            android:layout_columnSpan="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonStartServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demarrer Serveur"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <Button
            android:id="@+id/buttonStopServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stopper Serveur"
            app:layout_constraintRight_toRightOf="parent"
            />

        <Button
            android:id="@+id/buttonLaunchBluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lancer Service Bluetooth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonStopBluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stopper Service Bluetooth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/SerialText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_columnSpan="2"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="483dp" />

    </GridLayout>





</android.support.constraint.ConstraintLayout>